<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="red_button">
        <item name="android:background">@drawable/custom_button_bg</item>
        <item name="backgroundTint">@color/red_500</item>

        <item name="android:textSize">20sp</item>
        <item name="android:textFontWeight" tools:targetApi="p">600</item>

        <item name="android:paddingVertical" tools:targetApi="o">
            16dp
        </item>
    </style>


    <style name="AzFilmText">
        <item name="android:textFontWeight" tools:ignore="NewApi">700</item>
