        <item name="android:textColor">@color/gray_200</item>
    </style>

    <style name="Image_Poster">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="circle_image">
        <item name="cornerSize">50%</item>
